#!/bin/sh

# Shows network type and signal strength.
# For dwm/st status bar, compatible with Arch Linux Nerd Fonts rendering

case $BUTTON in
	1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	2) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Ethernet
if grep -xq 'up' /sys/class/net/e*/operstate 2>/dev/null; then
	echo ""
	exit
fi

# Wifi
if grep -xq 'up' /sys/class/net/w*/operstate 2>/dev/null; then
	signal=$(awk '/^\s*w/ {print int($3 * 100 / 70)}' /proc/net/wireless)
	echo "${signal}%󰖩"
elif grep -xq 'down' /sys/class/net/w*/operstate 2>/dev/null; then
	echo "󱚼"
fi
